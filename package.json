{
  "name": "fuse-snippets",
  "displayName": "fuse-snippets",
  "description": "An snippet extension to help with the creation of Fuses for Black Magic Design's Fusion and Davinci Resolve software",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.53.0"
  },
  "categories": [
    "Snippets",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:lua",
    "onCommand:fuse-snippets.helloWorld"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "snippets": [
      {
        "language": "lua",
        "path": "./snippets/fuse.code-snippets"
      }
    ],
    "commands":{
      "title": "Hello",
      "category": "Fuse-snippets",
      "command": "fuse-snippets.helloWorld"
    }

  },
  "extensionDependencies": [
    "sumneko.lua"
  ],
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.54.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "eslint": "^7.19.0",
    "glob": "^7.1.6",
    "mocha": "^8.2.1",
    "typescript": "^4.1.3",
    "vscode-test": "^1.5.0"
  }
}
